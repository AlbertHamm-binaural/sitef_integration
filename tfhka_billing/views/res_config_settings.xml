<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_tfhka" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tfhka</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <h2>TFHKA</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col12 col-lg-6">
                        <div class="form-group">
                            <label for="username_tfhka" class="col-form-label">Username</label>
                            <div class="col-sm-8">
                                <field name="username_tfhka"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password_tfhka" class="col-form-label">Password</label>
                            <div class="col-sm-8">
                                <field name="password_tfhka"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="url_tfhka" class="col-form-label">URL</label>
                            <div class="col-sm-8">
                                <field name="url_tfhka"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>